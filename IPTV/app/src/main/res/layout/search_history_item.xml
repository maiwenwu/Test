<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_left_20dp"
        android:background="@drawable/history_shape">

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_15dp"
            android:textColor="@color/colorSearchHistory"/>

        <ImageView
            android:id="@+id/iv_search_delete"
            android:layout_width="@dimen/padding_15dp"
            android:layout_height="@dimen/padding_15dp"
            android:layout_alignEnd="@+id/tv_search"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/tv_search"
            android:visibility="gone"
            android:src="@drawable/icon_delete" />

    </RelativeLayout>


</RelativeLayout>